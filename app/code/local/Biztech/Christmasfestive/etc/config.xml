<config>
    <modules>
        <Biztech_Christmasfestive>
            <version>0.1.0</version>
        </Biztech_Christmasfestive>
    </modules>
    <frontend>
        <routers>
            <christmasfestive>
                <use>standard</use>
                <args>
                    <module>Biztech_Christmasfestive</module>
                    <frontName>christmasfestive</frontName>
                </args>
            </christmasfestive>
        </routers>
        <layout>
            <updates>
                <christmasfestive>
                    <file>christmasfestive.xml</file>
                </christmasfestive>
            </updates>
        </layout>
    </frontend>
    <admin>
        <routers>
            <christmasfestive>
                <use>admin</use>
                <args>
                    <module>Biztech_Christmasfestive</module>
                    <frontName>christmasfestive</frontName>
                </args>
            </christmasfestive>
        </routers>
    </admin>
    <adminhtml>
        <acl>
            <resources>
                <all>
                    <title>Allow Everything</title>
                </all>
                <admin>
                    <children>
                        <Biztech_Christmasfestive>
                            <title>Christmasfestive Module</title>
                            <sort_order>10</sort_order>
                        </Biztech_Christmasfestive>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <christmasfestive>
                                            <title>Christmas Holiday Season Effects</title>
                                        </christmasfestive>
                                    </children>
                                </config>
                            </children>
                        </system>
                    </children>

                </admin>
            </resources>
        </acl>
        <layout>
            <updates>
                <christmasfestive>
                    <file>christmasfestive.xml</file>
                </christmasfestive>
            </updates>
        </layout>
