            <action method="setTemplate">
                <template>page/1column.phtml</template>
            </action>
        </reference>
        <reference name="content">
            <block type="iboughtit/checkout_success" name="iboughtit_checkout_success" template="svitla/iboughtit/success.phtml"/>
